    <script>

        function validateAlphabeticInput(input) {
            input.value = input.value.replace(/[A-Za-z]/g, '');
        }

        function validateForm() {
            var radioButtons = document.getElementsByName('groundZero');
            var isChecked = false;
            for (var i = 0; i < radioButtons.length; i++) {
                if (radioButtons[i].checked) {
                    isChecked = true;
                    break;
                }
            }
            if (!isChecked) {
                alert('Please select a time slot.');
                return false;
            }
            return true;
        }


        function copyUPI() {
            var upiIdText = document.getElementById("upiId").innerText;

            var tempInput = document.createElement("textarea");
            var copyIcon = document.querySelector(".copy-btn");

            tempInput.value = upiIdText;
            document.body.appendChild(tempInput);

            tempInput.select();
            tempInput.setSelectionRange(0, 99999);

            document.execCommand("copy");
            document.body.removeChild(tempInput);

            alert("Copied to clipboard");
        }

