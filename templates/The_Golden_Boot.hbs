        function validateForm() {
            var radioButtons = document.getElementsByName('Sahyadri_Turf');
            var isChecked = false;
            for (var i = 0; i < radioButtons.length; i++) {
                if (radioButtons[i].checked) {
                    isChecked = true;
                    break;
                }
            }
            if (!isChecked) {
                alert('Please select a time slot.');
                return false;
            }
            return true;
        }


        function copyUPI() {
            var upiIdText = document.getElementById("upiId").innerText;

