<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PD's Turf | Admin Dashboard</title>

    <!-- favicon -->
    <link rel="shortcut icon" href="/public/img/favicon1.png" type="image/x-icon">

    <!-- Bootstrap css links -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- Custom css link -->
    <link rel="stylesheet" href="">

    <!-- fontawesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap');

        body {
            cursor: default;
            font-family: 'Poppins', sans-serif;
            background-size: cover;
            background-repeat: no-repeat;

        }

        /* Section1 */
        .container-fluid .nav-item {
            font-size: 18px;
            font-weight: 500;
        }

        .container-fluid .nav-item1 {
            font-size: 18px;
            font-weight: 600;
        }

        .container-fluid .nav-link {
            color: rgb(238, 238, 238);
        }

        .container-fluid {
            background-color: rgba(0, 122, 16, 0.671);
        }

        ::-webkit-scrollbar {
            display: none;
        }

        #formLogin {
            margin: auto;
            width: 45%;
        }
    </style>

</head>

<body>

    <!-- Navbar -->
    <section id="navbar">
        <div class="container-fluid">
            <header class="d-flex justify-content-end py-3 px-5 w-100">
                <ul class="nav nav-pills">
                    {{!-- <li class="nav-item"><a href="../index.html" class="nav-link">Home</a></li>
                    &nbsp;
                    &nbsp;
                    <li class="nav-item"><a href="../pages/book.html" class="nav-link">Book</a></li>
                    &nbsp;
                    &nbsp;
                    <li class="nav-item"><a href="../pages/contactus.html" class="nav-link">Contact us</a></li>
                    &nbsp;
                    &nbsp;
                    &nbsp;
                    &nbsp; --}}
                    <li class="nav-item1"><a href="/logout" class="nav-link bg-success active">Logout</a></li>
                </ul>
            </header>
        </div>
    </section>
    <br>
    <section>
        <h1 class="text-center">Admin Dashboard</h1>
        <div class="d-flex justify-content-center">
            <button id="refreshButton" class="btn btn-success">Refresh Data &nbsp; <i
                    class="fa-solid fa-arrows-rotate"></i></button>
        </div>
        <div class="table-responsive p-5">
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Contact Number</th>
                        <th>Selected Slot</th>
                        <th>UPI Transaction ID</th>
                        <th>Date of Booking</th>
                        <th>Selected Turf Ground</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each bookings}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{contactNumber}}</td>
                        <td>{{selectedSlot}}</td>
                        <td>{{upiTransactionId}}</td>
                        <td>{{dateOfBooking}}</td>
                        <td>{{selectedTurfGround}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </section>

    <!-- Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <script>
        document.getElementById('refreshButton').addEventListener('click', function () {
            location.reload();
        });
    </script>
</body>

</html>