    <script>
        function validateAlphabeticInput(input) {
            input.value = input.value.replace(/[A-Za-z]/g, '');
        }

        function validateForm() {
            var radioButtons = document.getElementsByName('groundZero');
            var isChecked = false;
            for (var i = 0; i < radioButtons.length; i++) {
                if (radioButtons[i].checked) {
                    isChecked = true;
                    break;
                }
            }

            if (!isChecked) {
                alert('Please select a time slot.');
                return false;
            }
            return true;
        }

        var today = new Date().toISOString().split('T')[0];

        var twoWeeksFromToday = new Date();
        twoWeeksFromToday.setDate(twoWeeksFromToday.getDate() + 14);
        var maxDate = twoWeeksFromToday.toISOString().split('T')[0];

        var tomorrow = new Date();
        tomorrow.setDate(tomorrow.getDate() + 1);
        var minDate = tomorrow.toISOString().split('T')[0];

        document.getElementById('dateInput').setAttribute('min', minDate);
        document.getElementById('dateInput').setAttribute('max', maxDate);

        document.getElementById('dateInput').setAttribute('value', minDate);
    </script>
